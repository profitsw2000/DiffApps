<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classes_recycler_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/classes_recyclerview_item_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/blue_100">

        <profitsw2000.diffapps.customview.VerticalTextView
            android:id="@+id/open_skype_text_view"
            class="profitsw2000.diffapps.customview.VerticalTextView"
            style="@style/verticalTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Open in" />

        <ImageView
            android:id="@+id/camera_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/open_skype_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:rotation="90"
            android:src="@drawable/camera_icon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/classes_recycler_view_item_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/classes_image_background_style"
            android:padding="16dp"
            android:src="@drawable/bow_and_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/discipline_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/main_layouts_title_style"
            app:layout_constraintLeft_toRightOf="@+id/classes_recycler_view_item_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lesson_time_image_view"
            android:layout_marginLeft="24dp"
            android:text="History"/>

        <ImageView
            android:id="@+id/lesson_time_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/classes_recycler_view_item_image_view"
            app:layout_constraintTop_toBottomOf="@id/discipline_name_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/clock_icon"
            android:layout_marginLeft="24dp"/>

        <TextView
            android:id="@+id/leson_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/main_layouts_sub_title_style"
            app:layout_constraintLeft_toRightOf="@+id/lesson_time_image_view"
            app:layout_constraintTop_toBottomOf="@id/discipline_name_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:text="8:00 - 8:45"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
