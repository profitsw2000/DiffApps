<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hour_blood_pressure_result_list_item_view_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yellow_gradient_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/measure_time_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:textColor="@color/pale_blue"
            android:layout_marginStart="12dp"
            tools:text="23:54"/>

        <LinearLayout
            android:id="@+id/blood_pressure_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/high_pressure_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"
                tools:text="127"/>

            <TextView
                android:id="@+id/delimeter_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/pale_blue"
                android:text="/"/>

            <TextView
                android:id="@+id/low_pressure_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="2"
                android:textSize="30sp"
                android:textColor="@color/black"
                tools:text="64"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/pulse_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/heart_icon_12"/>

            <TextView
                android:id="@+id/pulse_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:textSize="30sp"
                android:textColor="@color/pearl_dark_grey"
                tools:text="64"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>