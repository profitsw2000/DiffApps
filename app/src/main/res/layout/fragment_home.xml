<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/count_down_timer_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/teal_500"
        app:cardCornerRadius="@dimen/countdown_timer_card_corner_radius"
        app:cardElevation="@dimen/card_elevation_size"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/count_down_timer_layout"
            layout="@layout/count_down_timer_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lesson_homework_info_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/count_down_timer_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/classes_recycler_view_title_text_view"
            style="@style/main_layouts_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Classes"/>

        <TextView
            android:id="@+id/number_of_classes_today_title_text_view"
            style="@style/main_layouts_sub_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/classes_recycler_view_title_text_view"
            app:layout_constraintRight_toRightOf="parent"
            android:text="6 classes today"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/classes_list_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/classes_recycler_view_title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="@dimen/lesson_info_layouts_interval"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/homework_recycler_view_title_text_view"
            style="@style/main_layouts_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lesson_info_layouts_interval"
            app:layout_constraintTop_toBottomOf="@id/classes_list_recycler_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Homework"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homework_list_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/homework_recycler_view_title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="@dimen/lesson_info_layouts_interval"
            android:orientation="horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>