<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="exam_count_down_timer_digit_text_style">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/count_down_timer_digit_background</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="verticalTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="main_layouts_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="main_layouts_sub_title_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="big_card_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_100</item>
    </style>

    <style name="big_card_sub_title_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_100</item>
    </style>

    <style name="classes_info_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>

</resources>