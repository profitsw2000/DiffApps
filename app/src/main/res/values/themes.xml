        <item name="colorOnSurfaceInverse">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bckg</item>
        <!-- Customize your theme here. -->
        <!-- Background color. -->
        <item name="android:colorBackground">@color/bckg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ambientShadowAlpha">0.75</item>
        <item name="android:spotShadowAlpha">0.75</item>
    </style>

</resources>